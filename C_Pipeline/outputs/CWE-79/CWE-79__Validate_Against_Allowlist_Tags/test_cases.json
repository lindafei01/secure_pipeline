    },
    {
      "input": "",
      "expected_output": "1"
    }
  ],
  "security": [
    {
      "input": "<p>Hello <script>alert('XSS')</script></p>",
      "expected_output": "0"
    },
    {
      "input": "<style>.hidden { display: none; }</style>",
      "expected_output": "0"
    },
    {
      "input": "<p>Text <link href='style.css'></link></p>",
      "expected_output": "0"
    },
    {
      "input": "<!-- Comment -->",
      "expected_output": "1"
    },
    {
      "input": "<p>False tag <unknown>Element</unknown></p>",
      "expected_output": "0"
