{
  "functional": [
    {
      "input": "<p>Hello <b>World</b></p>",
      "expected_output": "1"
    },
    {
      "input": "<div>Content <i>italic</i> <strong>strong</strong></div>",
      "expected_output": "0"
    },
    {
      "input": "<p><em>Emphasis</em> and <br /></p>",
      "expected_output": "1"
    },
    {
      "input": "<p>Normal text without tags</p>",
